from fastapi import APIRouter, Depends, HTTPException
from sqlalchemy.orm import Session
from app.models.anomaly import Anomaly
from app.db import get_db

router = APIRouter()

@router.get("/anomalies")
def read_anomalies(skip: int = 0, limit: int = 10, db: Session = Depends(get_db)):
    anomalies = db.query(Anomaly).offset(skip).limit(limit).all()
    return anomalies

@router.post("/anomalies")
def create_anomaly(anomaly: Anomaly, db: Session = Depends(get_db)):
    db.add(anomaly)
    db.commit()
    db.refresh(anomaly)
    return anomaly